<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".InicioCuestionario">

    <EditText
        android:id="@+id/etxtAviso"
        android:layout_width="313dp"
        android:layout_height="0dp"
        android:layout_marginTop="306dp"
        android:layout_marginBottom="59dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="@string/TxtAviso"
        app:layout_constraintBottom_toTopOf="@+id/btnComenzarC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnComenzarC"
        android:layout_width="128dp"
        android:layout_height="51dp"
        android:layout_marginBottom="198dp"
        android:backgroundTint="@color/primaryDarkColor"
        android:onClick="pasarCuestionario"
        android:text="@string/button_comenzar"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxtAviso" />
</androidx.constraintlayout.widget.ConstraintLayout>